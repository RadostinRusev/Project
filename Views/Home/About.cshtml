@model IEnumerable<ProjMVC.ViewModels.PlayListVM>
@{
    ViewBag.Title = "About";
    

}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("About", "Home", FormMethod.Get))
{
    <input type="hidden" name="ID" value="@ViewData["id"]">
    @Html.TextBox("search")
    <input type="submit" value="search" />

}
<table class="table table-striped">

    <thead>
        <tr>
            <th>Genre</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>id</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                No Playlist with name like that
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @item.Genre
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        <a href="/Home/Song?id=@item.UserId">Playlists</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
